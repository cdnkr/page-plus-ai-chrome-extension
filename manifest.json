{
  "manifest_version": 3,
  "name": "Know: Select â†’ Prompt, Summarize, Write",
  "version": "1.0.0",
  "description": "AI-powered text selection tool using Google's in-browser AI APIs",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "icons/16_dark.png",
    "32": "icons/32_dark.png",
    "48": "icons/48_dark.png",
    "64": "icons/64_dark.png",
    "128": "icons/128_dark.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.js",
        "i18n.js",
        "config.js",
        "main/**",
        "popover/**",
        "utils/**",
        "icons/**"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
