{
  "manifest_version": 3,
  "name": "Know: Select â†’ Prompt, Summarize, Write",
  "version": "1.0.0",
  "description": "AI-powered text selection tool using Google's in-browser AI APIs",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popover.js", "i18n.js", "icons/128.png", "icons/logo.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
